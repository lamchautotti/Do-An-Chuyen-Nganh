@model IEnumerable<DACS.Models.DichVu>
@{
    ViewBag.Title = "ListDichVu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    @Html.ActionLink("Tạo mới", "Create")
</div>
<h2>Danh sách dịch vụ</h2>

<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên dịch vụ</th>
        <th> Hình </th>
        <th> Giá</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDV)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Hinh)" class="img-fluid" style="width: 300px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoiGio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaDV)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaDV }) |
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaDV }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDV })
        </td>
    </tr>
}

</table>
